<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>
<div id="task-calendar">
  <!-- ここにカレンダーコンポーネントがマウントされます -->
</div>
<div id="app">

</div>

<%= vite_javascript_tag 'entrypoints/tasks' %>

<table>
  <thead>
    <tr>
      <th>UserName</th>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= render task %></td>
        <td>
          <%= link_to "Show this task", task %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path %>
